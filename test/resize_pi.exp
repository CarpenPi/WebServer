expect "raspberrypi login: "
send "pi\n"

expect "Password: "
send "raspberry\n"

set PROMPT "pi@raspberrypi:~$ "

expect $PROMPT
send "sudo /usr/bin/env raspi-config --expand-rootfs\n"

expect $PROMPT
send "sudo poweroff\n"

interact
